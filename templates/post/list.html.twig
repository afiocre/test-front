{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1 class="mb-5">Posts</h1>
    <div class="pb-4">
        {% if is_granted('ROLE_USER') %}
            Hello <strong>{{ app.user.firstName }}</strong><br>
            <a href="{{ path('user_logout') }}">Logout</a>
        {% else %}
            <a href="{{ path('user_login') }}">Login</a>
        {% endif %}
    </div>
    {% for post in posts %}
        <a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a><br>
    {% endfor %}
{% endblock %}